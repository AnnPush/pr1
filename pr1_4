/Validating User Input

#include <stdio.h>

//function main program execution
int main(void)
{
	//initialize variables in definitions
	unsigned int passes = 0; //number of passes
	unsigned int failures = 0; //number of fallures
	unsigned int student = 1; //student counter
	int result = 1; //one exam result
	
	//proccess 10 students using counter-controlled loop
	
	while(student <= 10)
	{
		//promt user for input and obtain value from user
		printf("%s", "Enter result (1 = pass, 2 = fail):");
		scanf("%d", &result);
		//if result 1, increment passed
		if(result == 1)
		{
			passes = passes + 1;
		}//end if
		else if(result ==2)//otherwise, increment failures
		{
			failures = failures + 1;
		}
		else
		{
			student--;
		}//end else
		student = student + 1; //increment student counter
	}//end while
	
	//termination phase: display number of passed and failures
	printf("Passed %u\n", passes);
	printf("Failed %u\n", failures);
	
	//if more than eight students passed, print "Bonus to instructor."
	if(passes > 8)
	{
		puts("Bonus to instructor!");
	}//end if
}//end function main
