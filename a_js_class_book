<!DOCTYPE html>
<html>
<body>
<h1>Class Book</h1>

<script>

class Book
{
   //конструктор
    constructor(name)
	{
      //переменные класса
	    this.name = name;
		  this.author = "";
		  this.price = 0;
    
      //переменная класса с набором свойств
	   	this.info =
		{
		    pagesCount: 100,
            pictures: true
		};
	}
  //метод класса
	show(word)
	{
	    alert(word + " " + this.name + " " +this.info.pagesCount );
	}
}
//создаем объект
var obj = new Book("Town");
//вызов функции класса
obj.show("Book");

</script>
</body>
</html>



