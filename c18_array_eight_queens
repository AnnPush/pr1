#include "stdafx.h"

#include <stdio.h>
#define SIZE 8

//прототипы функций
bool setQueens(int[][SIZE], int size);//проверить, расставлены все ферзи
void printArray(int b[][SIZE], int size);
int accessibilityHeuristic(int b[][SIZE], int r, int c, bool f);//эвристика доступности

int _tmain(int argc, _TCHAR* argv[])
{
	int board[SIZE][SIZE] = {0};//инициализировать поле нулями
    int accessibility[SIZE][SIZE] = {0};//инициализировать массив значений доступности нулями
	
	int currentRow;//текущая строка
    int currentColumn;//текущий столбец

	do
	{
		//обнулить клетки доски
		for(int i = 0; i < SIZE; i++)
		{
			for(int j = 0; j < SIZE; j++)
			{
				board[i][j] = 0;
			}
		}
		//расставляем ферзей
		for(int i = 1; i <= SIZE; i++)
        {
			board[currentRow][currentColumn] = 1;
		}

	}while(!setQueens(board, SIZE));
}
//end main



